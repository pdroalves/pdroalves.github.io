---
import PageLayout from '../layouts/PageLayout.astro';
import fs from 'fs';
import path from 'path';
import yaml from 'js-yaml';
import { fileURLToPath } from 'url';

const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);
const projectRoot = path.resolve(__dirname, '../..');

interface ResumeData {
  personal?: {
    name?: string;
    title?: string;
    email?: string;
    location?: string;
    website?: string;
  };
  education?: Array<{
    degree?: string;
    institution?: string;
    year?: string;
    thesis?: string;
  }>;
  experience?: Array<{
    title?: string;
    organization?: string;
    location?: string;
    startDate?: string;
    endDate?: string;
    description?: string;
  }>;
  skills?: Array<{
    category?: string;
    items?: string[];
  }>;
  teaching?: Array<{
    course?: string;
    institution?: string;
    year?: string;
    role?: string;
  }>;
}

let resumeData: ResumeData = {};
try {
  const resumePath = path.join(projectRoot, 'src', 'content', 'resume.yaml');
  if (fs.existsSync(resumePath)) {
    resumeData = yaml.load(fs.readFileSync(resumePath, 'utf-8')) as ResumeData;
  }
} catch (e) {
  console.error('Error loading resume.yaml:', e);
}
---

<PageLayout title="Resume">
  <div class="resume">
    {resumeData.personal && (
      <section class="resume-section">
        <h1>{resumeData.personal.name || 'Resume'}</h1>
        {resumeData.personal.title && <p class="title">{resumeData.personal.title}</p>}
        <div class="contact-info">
          {resumeData.personal.location && <p>üìç {resumeData.personal.location}</p>}
          {resumeData.personal.website && <p>üåê <a href={resumeData.personal.website}>{resumeData.personal.website}</a></p>}
        </div>
      </section>
    )}
    
    {resumeData.education && resumeData.education.length > 0 && (
      <section class="resume-section">
        <h2>Education</h2>
        {resumeData.education.map((edu) => (
          <div class="resume-item">
            <h3>{edu.degree}</h3>
            <p class="institution">{edu.institution}</p>
            {edu.year && <p class="year">{edu.year}</p>}
            {edu.thesis && <p class="thesis"><em>Thesis: {edu.thesis}</em></p>}
          </div>
        ))}
      </section>
    )}
    
    {resumeData.experience && resumeData.experience.length > 0 && (
      <section class="resume-section">
        <h2>Experience</h2>
        {resumeData.experience.map((exp) => (
          <div class="resume-item">
            <h3>{exp.title}</h3>
            <p class="organization">{exp.organization} {exp.location && `- ${exp.location}`}</p>
            <p class="dates">{exp.startDate} - {exp.endDate || 'Present'}</p>
            {exp.description && <p class="description">{exp.description}</p>}
          </div>
        ))}
      </section>
    )}
    
    {resumeData.skills && resumeData.skills.length > 0 && (
      <section class="resume-section">
        <h2>Skills</h2>
        {resumeData.skills.map((skillGroup) => (
          <div class="skill-group">
            <h3>{skillGroup.category}</h3>
            <div class="skill-items">
              {skillGroup.items?.map((item) => (
                <span class="skill-tag">{item}</span>
              ))}
            </div>
          </div>
        ))}
      </section>
    )}
    
    {resumeData.teaching && resumeData.teaching.length > 0 && (
      <section class="resume-section">
        <h2>Teaching</h2>
        {resumeData.teaching.map((teaching) => (
          <div class="resume-item">
            <h3>{teaching.course}</h3>
            <p class="organization">{teaching.institution}</p>
            {teaching.year && <p class="year">{teaching.year}</p>}
            {teaching.role && <p class="role">{teaching.role}</p>}
          </div>
        ))}
      </section>
    )}
  </div>
</PageLayout>

<style>
  .resume {
    line-height: 1.8;
  }
  
  .resume-section {
    margin-bottom: 3rem;
  }
  
  .resume-section h2 {
    border-bottom: 2px solid var(--color-primary);
    padding-bottom: 0.5rem;
    margin-bottom: 1.5rem;
  }
  
  .resume-item {
    margin-bottom: 2rem;
    padding-left: 1rem;
    border-left: 3px solid var(--color-secondary);
  }
  
  .resume-item h3 {
    margin-top: 0;
    color: var(--color-primary);
  }
  
  .title {
    font-size: 1.2rem;
    color: var(--color-text-light);
    font-style: italic;
  }
  
  .contact-info {
    margin: 1rem 0;
  }
  
  .contact-info p {
    margin: 0.5rem 0;
  }
  
  .institution, .organization {
    font-weight: 600;
    color: var(--color-text);
  }
  
  .year, .dates {
    color: var(--color-text-light);
    font-size: 0.9rem;
  }
  
  .description, .thesis {
    margin-top: 0.5rem;
    color: var(--color-text);
  }
  
  .skill-group {
    margin-bottom: 1.5rem;
  }
  
  .skill-group h3 {
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }
  
  .skill-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .skill-tag {
    background: var(--color-secondary);
    color: white;
    padding: 0.4rem 0.8rem;
    border-radius: 4px;
    font-size: 0.9rem;
  }
  
  @media print {
    .resume-section {
      page-break-inside: avoid;
    }
  }
</style>

