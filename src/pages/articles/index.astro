---
import PageLayout from '../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

// Get all articles
let articles = [];
try {
  const allArticles = await getCollection('articles');
  articles = allArticles
    .sort((a, b) => {
      const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
      const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
      return dateB - dateA;
    });
} catch (e) {
  // Collection might not exist yet
  articles = [];
}
---

<PageLayout title="Articles">
  <div class="articles">
    <h1>Articles</h1>
    <p class="intro">Blog posts and articles about my research, thoughts, and experiences.</p>
    
    {articles.length > 0 ? (
      <div class="articles-list">
        {articles.map((article) => (
          <article class="article-card">
            <h2><a href={`/articles/${article.slug}`}>{article.data.title}</a></h2>
            {article.data.date && (
              <time class="date">
                {new Date(article.data.date).toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </time>
            )}
            {article.data.description && (
              <p class="description">{article.data.description}</p>
            )}
            <a href={`/articles/${article.slug}`} class="read-more">
              Read more â†’
            </a>
          </article>
        ))}
      </div>
    ) : (
      <div class="no-articles">
        <p>No articles yet. Check back soon!</p>
        <p class="note">To add articles, create Markdown files in <code>src/content/articles/</code></p>
      </div>
    )}
  </div>
</PageLayout>

<style>
  .articles {
    max-width: 1000px;
  }
  
  .intro {
    font-size: 1.1rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
  }
  
  .articles-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .article-card {
    padding: 2rem;
    background: #f9f9f9;
    border-radius: 8px;
    border-left: 4px solid var(--color-secondary);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .article-card:hover {
    transform: translateX(4px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  .article-card h2 {
    margin-top: 0;
  }
  
  .article-card h2 a {
    color: var(--color-primary);
    text-decoration: none;
  }
  
  .article-card h2 a:hover {
    text-decoration: underline;
  }
  
  .date {
    display: block;
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin: 0.5rem 0;
  }
  
  .description {
    margin: 1rem 0;
    line-height: 1.6;
  }
  
  .read-more {
    display: inline-block;
    margin-top: 1rem;
    color: var(--color-secondary);
    font-weight: 500;
    text-decoration: none;
  }
  
  .read-more:hover {
    text-decoration: underline;
  }
  
  .no-articles {
    text-align: center;
    padding: 3rem;
    color: var(--color-text-light);
  }
  
  .note {
    margin-top: 1rem;
    font-size: 0.9rem;
  }
</style>

