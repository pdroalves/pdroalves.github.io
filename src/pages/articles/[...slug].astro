---
import PageLayout from '../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  try {
    const articles = await getCollection('articles');
    return await Promise.all(articles.map(async (article) => {
      const { Content } = await article.render();
      return {
        params: { slug: article.slug },
        props: { 
          article: {
            data: article.data,
            slug: article.slug,
            Content,
          }
        },
      };
    }));
  } catch (e) {
    return [];
  }
}

interface Props {
  article: {
    data: any;
    slug: string;
    Content: any;
  };
}

const { article } = Astro.props;
---

<PageLayout title={article.data.title} description={article.data.description}>
  <article class="article">
    <header class="article-header">
      <h1>{article.data.title}</h1>
      {article.data.date && (
        <time class="date">
          {new Date(article.data.date).toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
      )}
      {article.data.tags && article.data.tags.length > 0 && (
        <div class="tags">
          {article.data.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    
    <div class="article-content">
      <article.Content />
    </div>
    
    <footer class="article-footer">
      <a href="/articles">‚Üê Back to Articles</a>
    </footer>
  </article>
</PageLayout>

<style>
  .article {
    max-width: 800px;
    line-height: 1.8;
  }
  
  .article-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-border);
  }
  
  .article-header h1 {
    margin-top: 0;
  }
  
  .date {
    display: block;
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin: 0.5rem 0;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  
  .tag {
    background: var(--color-secondary);
    color: white;
    padding: 0.3rem 0.6rem;
    border-radius: 4px;
    font-size: 0.85rem;
  }
  
  .article-content {
    margin: 2rem 0;
  }
  
  .article-content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .article-content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .article-content :global(code) {
    background: #f4f4f4;
    padding: 0.2em 0.4em;
    border-radius: 3px;
  }
  
  .article-content :global(pre) {
    background: #2d2d2d;
    color: #f8f8f2;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
  }
  
  .article-content :global(pre code) {
    background: none;
    color: inherit;
    padding: 0;
  }
  
  .article-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid var(--color-border);
  }
  
  .article-footer a {
    color: var(--color-secondary);
    font-weight: 500;
    text-decoration: none;
  }
  
  .article-footer a:hover {
    text-decoration: underline;
  }
</style>

