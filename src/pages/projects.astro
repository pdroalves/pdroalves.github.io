---
import BaseLayout from '../layouts/BaseLayout.astro';
import fs from 'fs';
import path from 'path';
import yaml from 'js-yaml';
import { fileURLToPath } from 'url';

const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);
const projectRoot = path.resolve(__dirname, '../..');

interface Project {
  title: string;
  description: string;
  link: string;
  tags: string[];
  year: string;
}

let projects: Project[] = [];

try {
  const portfolioPath = path.join(projectRoot, 'src', 'content', 'portfolio.yaml');
  if (fs.existsSync(portfolioPath)) {
    const portfolioData = yaml.load(fs.readFileSync(portfolioPath, 'utf-8')) as any;
    projects = portfolioData?.projects || [];
  }
} catch (e) {
  console.error('Error loading portfolio.yaml:', e);
}
---

<BaseLayout title="Projects" description="Open source projects and contributions">
  <div class="projects-page">
    <header class="page-header">
      <h1>Projects</h1>
      <p class="page-description">
        Open source projects and contributions focused on cryptography, 
        privacy-preserving technologies, and high-performance computing.
      </p>
    </header>

    {projects.length > 0 ? (
      <div class="projects-grid">
        {projects.map((project) => (
          <article class="project-card">
            <div class="project-header">
              <div class="project-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                </svg>
              </div>
              <span class="project-year">{project.year}</span>
            </div>
            
            <h3 class="project-title">{project.title}</h3>
            <p class="project-description">{project.description}</p>
            
            {project.tags && project.tags.length > 0 && (
              <div class="project-tags">
                {project.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
            
            {project.link && project.link !== '#' && (
              <a href={project.link} target="_blank" rel="noopener noreferrer" class="project-link">
                <svg class="github-icon" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                View on GitHub
              </a>
            )}
          </article>
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <p>Projects coming soon!</p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  .projects-page {
    max-width: 1000px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .page-header h1 {
    margin-bottom: var(--space-md);
  }

  .page-description {
    color: var(--color-text-light);
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-xl);
  }

  .project-card {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
    border-color: var(--color-border-light);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-md);
  }

  .project-icon {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-primary);
    border-radius: var(--radius-md);
    color: white;
  }

  .project-icon svg {
    width: 22px;
    height: 22px;
  }

  .project-year {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    font-weight: 500;
  }

  .project-title {
    font-size: 1.25rem;
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }

  .project-description {
    color: var(--color-text-light);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: var(--space-md);
    flex-grow: 1;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-lg);
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-text);
    transition: all var(--transition-base);
    align-self: flex-start;
  }

  .project-link:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }

  .github-icon {
    width: 18px;
    height: 18px;
  }

  .empty-state {
    text-align: center;
    padding: var(--space-3xl);
    color: var(--color-text-light);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

