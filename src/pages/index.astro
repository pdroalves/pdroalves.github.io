---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProfilePicture from '../components/ProfilePicture.astro';
import SocialLinks from '../components/SocialLinks.astro';
import { siteConfig } from '../config';
import fs from 'fs';
import path from 'path';
import yaml from 'js-yaml';
import MarkdownIt from 'markdown-it';
import { fileURLToPath } from 'url';

const md = new MarkdownIt();

// Get the project root directory
const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);
const projectRoot = path.resolve(__dirname, '../..');

// Load content files
let aboutHtml = '';
let socialLinks: Array<{name: string; url: string; icon: string; display?: boolean}> = [];
let location = '';

// Load about.md and convert to HTML
try {
  const aboutPath = path.join(projectRoot, 'src', 'content', 'about.md');
  if (fs.existsSync(aboutPath)) {
    const aboutText = fs.readFileSync(aboutPath, 'utf-8');
    // Use markdown-it for synchronous markdown parsing
    aboutHtml = md.render(aboutText);
  }
} catch (e) {
  console.error('Error loading about.md:', e);
}

// Load social links
try {
  const socialPath = path.join(projectRoot, 'src', 'content', 'social.yaml');
  if (fs.existsSync(socialPath)) {
    const socialData = yaml.load(fs.readFileSync(socialPath, 'utf-8')) as {links?: Array<{name: string; url: string; icon: string; display?: boolean}>};
    socialLinks = (socialData?.links || []).filter(link => link.display !== false);
  }
} catch (e) {
  console.error('Error loading social.yaml:', e);
}

// Load location from resume
try {
  const resumePath = path.join(projectRoot, 'src', 'content', 'resume.yaml');
  if (fs.existsSync(resumePath)) {
    const resumeData = yaml.load(fs.readFileSync(resumePath, 'utf-8')) as {personal?: {location?: string}};
    location = resumeData?.personal?.location || '';
  }
} catch (e) {
  console.error('Error loading resume.yaml:', e);
}
---

<BaseLayout title="Home" description={siteConfig.description}>
  <div class="landing-page">
    <div class="hero-grid">
      <div class="hero-left">
        <ProfilePicture />
      </div>
      <div class="hero-right">
        <h1>{siteConfig.author}</h1>
        <p class="subtitle">{siteConfig.title.split(' - ')[1]}</p>
        <div class="highlights" aria-label="Highlights">
          <span class="chip">Privacy-preserving computing</span>
          <span class="chip">Homomorphic encryption</span>
          <span class="chip">CUDA / GPGPU</span>
        </div>
      </div>
    </div>
    
    <div class="content-grid">
      <main class="main-content">
        <section class="about-section">
          {location && (
            <p class="location-text">
              <span class="country-flag">{location === 'Brazil' ? 'üáßüá∑' : 'üìç'}</span>
              {location}
            </p>
          )}
          {aboutHtml ? (
            <div class="about-content" set:html={aboutHtml} />
          ) : (
            <p>About information will be loaded from content/about.md</p>
          )}
        </section>
      </main>
      
      <aside class="sidebar">
        <div class="contact-card">
          <h3>Contact</h3>
          <div class="contact-details">
            <p class="email-text">pedro.alves@zama.org</p>
            <p class="email-text">pdroalves@gmail.com</p>
          </div>
        </div>
        
        <div class="social-card">
          <h3>Connect</h3>
          <SocialLinks links={socialLinks} />
        </div>
      </aside>
    </div>
  </div>
</BaseLayout>

<style>
  .landing-page {
    padding: 2rem 0;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .hero-grid {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 2rem;
    align-items: center;
    margin-bottom: 3rem;
    padding: 1.75rem;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    background: linear-gradient(180deg, #ffffff 0%, #fbfbfb 100%);
  }
  
  .hero-left {
    display: flex;
    justify-content: center;
  }
  
  .hero-right {
    text-align: left;
  }
  
  .hero-right h1 {
    font-size: 2.5rem;
    margin: 0 0 0.5rem 0;
    color: var(--color-primary);
  }
  
  .subtitle {
    font-size: 1.2rem;
    color: var(--color-text-light);
    margin: 0 0 0.75rem 0;
  }

  .highlights {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .chip {
    display: inline-flex;
    align-items: center;
    padding: 0.35rem 0.65rem;
    border-radius: 999px;
    border: 1px solid var(--color-border);
    background: rgba(52, 152, 219, 0.08);
    color: var(--color-primary);
    font-size: 0.85rem;
    line-height: 1;
    white-space: nowrap;
  }
  
  
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 2rem;
    align-items: start;
  }
  
  .main-content {
    min-width: 0;
  }
  
  .about-section {
    text-align: left;
    padding: 0;
    background: none;
    border-radius: 0;
  }
  
  .about-section .location-text {
    color: var(--color-text-light);
    font-size: 0.95rem;
    margin: 0 0 1.5rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .about-section .country-flag {
    font-size: 1.2rem;
  }
  
  .about-content {
    line-height: 1.8;
  }
  
  .about-content h1 {
    font-size: 1.75rem;
    margin-top: 0;
  }
  
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .contact-card,
  .social-card {
    background: #f9f9f9;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid var(--color-border);
  }
  
  .contact-card h3,
  .social-card h3 {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    color: var(--color-primary);
    font-weight: 600;
  }
  
  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .email-text {
    color: var(--color-text);
    font-size: 0.9rem;
    margin: 0;
    font-family: 'Courier New', monospace;
  }
  
  
  .social-card :global(.social-links) {
    margin: 0;
    max-width: 100%;
    justify-content: flex-start;
    grid-template-columns: 1fr;
  }
  
  .social-card :global(.social-link) {
    width: 100%;
    justify-content: flex-start;
  }
  
  @media (max-width: 968px) {
    .content-grid {
      grid-template-columns: 1fr;
    }
    
    .hero-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .hero-right {
      text-align: center;
    }

    .highlights {
      justify-content: center;
    }
    
    .sidebar {
      order: -1;
    }
  }
  
  @media (max-width: 768px) {
    .landing-page {
      padding: 1rem 0;
    }
    
    .hero-grid {
      gap: 1.5rem;
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
    }
    
    .hero-right h1 {
      font-size: 2rem;
    }
    
    .subtitle {
      font-size: 1rem;
    }
    
    .content-grid {
      gap: 1.5rem;
    }
    
    .contact-card,
    .social-card {
      padding: 1rem;
    }
  }
</style>
